{{#if works.length}}
<div class="row">
  {{#each works}}
  <div class="col-sm-3" style="margin: 20px;">
    <div class="card" style="width: 18rem;">
      <img src="/images/{{img}}" class="card-img-top" alt="{{name}}" />
      <div class="card-body">
        <h5 class="card-title"><a href="/admin/works/{{_id}}">{{name}}</a></h5><br>
        <hr>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">{{price}}</li>
      </ul>
      <div class="card-body d-flex justify-content-between">
        <form action="/card/add" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-primary">Buy</button>
        </form>
        <a href="/admin/works/edit/{{id}}" class="card-link">Edit</a>
        <a href="/admin/works/delete/{{id}}" class="card-link">Delete</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h2>Works is empty</h2>
{{/if}}